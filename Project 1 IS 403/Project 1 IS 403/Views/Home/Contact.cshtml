
<div class="container">    
    @using (Html.BeginForm("Sign_in", "Home", FormMethod.Post, new { @class = "form-signin" }))
    {
        <div class="row">
            <h2 class="form-signin-heading">Contact Us</h2>
            <br />
        </div>
            <div class="row">
                <label for="inputEmail" class="sr-only">Email Address</label>
                @Html.TextBox("User Name", "", new { type = "userName", id = "inputUserName", @class = "form-control", placeholder = "User Name", required = true, autofocus = true })
                <br />
            </div>
            <div class="row">
                <label for="inputEmail" class="sr-only">Email Address</label>
                @Html.TextBox("Email Address", "", new { type = "email", id = "inputEmail", @class = "form-control", placeholder = "Email Address", required = true })
                <br />
            </div>
            <div class="row">
                <label for="inputPassword" class="sr-only">Password</label>
                @Html.Password("Password", "", new { type = "password", id = "inputPassword", @class = "form-control", placeholder = "Password", required = true })
                <br />
            </div>
            <div class="row">
                <fieldset>
                    <h5>
                        Request Type<br />
                        <br />
                        @Html.DropDownList("contentType")
                    </h5>
                </fieldset>
            </div>
            <div class="row">
                <label for="inputContent" class="sr-only">How can we help you?</label>
                <br />
                @Html.TextArea("first", "", new { type = "password", id = "inputContent", @class = "form-control contentBox", placeholder = "How can we help you?", required = true })
                <br />
            </div>
            <div class="row">
                <div class="col-6">
                    <button class="btn btn-md btn-primary btn-block" type="submit">Submit</button>
                    <br />
                    <p>*We typically get back to you within 2 business days.</p>
                </div>
            </div>
    }
</div>
